    <tag>out.action=new Object(); </tag>

    <item>Jarvis</item>

    <one-of>
      <item>lance wareplaine<tag>out.action.val="runwarplane"</tag></item>
      <item>ferme wareplaine<tag>out.action.val="closewarplane"</tag></item>
      
